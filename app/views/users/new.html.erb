<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

    <div class="name">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="name">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="name">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="name">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <% if @user.errors.any?%>
        <h2>Errors: </h2>
        <ul>
          <% @user.errors.full_messages.each do |message|%>
            <li><%= message %> </li>
          <% end%>
        </ul>
    <%end%>

    <%= f.submit "Submit" %>

<% end %>