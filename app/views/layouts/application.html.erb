<!DOCTYPE html>
<html>
  <head>
    <title>SemiTaskManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Semi TaskManager</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active">  <%= link_to("Home",tasks_path) %> </li>
        <li class="active">  <%= link_to("Users",users_path) %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if @current_user.present?%>

          <li>
            <span class="glyphicon glyphicon-user">
               <%= link_to("Logout",session_path(session),method: "delete") %>
              <p style="color:white">Bonjour: <%=@current_user.name %></p>
            </span>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>


    <%= yield %>
  </body>
</html>


